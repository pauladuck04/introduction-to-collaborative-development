                "reveal": "silent",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            }
        },
        {
            "label": "Test exercise",
            "type": "shell",
            "dependsOn": [
                "Ensure exercise file",
                "Set up basic testing requirements"
            ],
            "windows": {
                "command": "py",
                "args": [
                    "-m",
                    "pytest",
                    "${relativeFileDirname}\\tests\\test_${fileBasename}",
                    "--capture=no",
                    "--no-header",
                    "--verbosity=0",
                    "-r=fEX",
                    "--disable-warnings",
                    "--tb=line",
                    "--show-capture=all",
                    "--assert=plain",
                    "--maxfail=1"
                ]
            },
            "linux": {
                "command": "py3",
                "args": [
